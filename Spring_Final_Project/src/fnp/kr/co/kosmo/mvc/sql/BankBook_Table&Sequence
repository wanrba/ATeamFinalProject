--통장테이블(Bank book)
CREATE TABLE BANKBOOK(
	BANKBOOK_NUM NUMBER CONSTRAINT BANKBOOK_NUM_PK PRIMARY KEY,										-- 통장 INDEX
    RESULT_USERNUM NUMBER(10) CONSTRAINT RESULT_USERNUM_NN NOT NULL,								-- 연인고유번호
    BANKBOOK_NUMBER NUMBER(15) CONSTRAINT BANKBOOK_NUMBER_NN NOT NULL,								-- 통장 계좌번호
    BANKBOOK_PWD VARCHAR2(20) CONSTRAINT BANKBOOK_PWD_NN NOT NULL,									-- 통장 비밀번호
    BANKBOOK_MONEY NUMBER DEFAULT 0,																-- 통장 잔액
    BANKBOOK_DATE DATE DEFAULT SYSDATE,																-- 통장 개설일
    CONSTRAINT BANKBOOK_USERNUM_FK FOREIGN KEY(RESULT_USERNUM) REFERENCES MEMBER(USER_CUPLENUM),	-- 연인 고유번호는 Member Table의 연인 고유번호를 참조해서 입력
    CONSTRAINT BANKBOOK_NUMBER_UQ UNIQUE(BANKBOOK_NUMBER),											-- 통장 Index는 고유값으로 설정 
);

-- BANK BOOK(통장) Table의 BANKBOOK_NUM용 Sequence 생성
CREATE SEQUENCE BANKBOOK_SEQ
INCREMENT BY 1
START WITH 1;