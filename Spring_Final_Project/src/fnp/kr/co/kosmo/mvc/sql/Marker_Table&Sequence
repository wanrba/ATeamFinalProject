-- MARKER Table Create SQL
CREATE TABLE MARKER
(
    MARKER_NUM        NUMBER           NULL, 
    MARKER_MNUM       NUMBER           NULL, 
    MARKER_TITLE      VARCHAR2(100)    NULL, 
    MARKER_CONTENT    VARCHAR2(400)    NULL, 
    MARKER_PICTURE    VARCHAR2(100)    NOT NULL, 
    MARKER_LAT        FLOAT(24)        NULL, 
    MARKER_LON        FLOAT(24)        NULL, 
    MARKER_ADDRESS    VARCHAR2(50)     NULL, 
    MARKER_DATE       DATE             DEFAULT SYSDATE NOT NULL, 
    CONSTRAINT PK_MARKER PRIMARY KEY (MARKER_NUM)
)
/

CREATE SEQUENCE MARKER_SEQ
START WITH 1
INCREMENT BY 1;
/


COMMENT ON TABLE MARKER IS 'MARKER'
/

ALTER TABLE MARKER
    ADD CONSTRAINT FK_MARKER_MARKER_MNUM_MAP_MAP_ FOREIGN KEY (MARKER_MNUM)
        REFERENCES MAP (MAP_NUM)
/
