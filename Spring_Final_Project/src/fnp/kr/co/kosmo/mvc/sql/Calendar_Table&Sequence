-- CALENDAR Table Create SQL
CREATE TABLE CALENDAR
(
    CIDX              NUMBER           NULL, 
    CTITLE            VARCHAR(200)     NOT NULL, 
    CSTARTDAY         DATE             NULL, 
    CENDDAY           DATE             NULL, 
    CLOCAL            VARCHAR(100)     NOT NULL, 
    CCONTENT          VARCHAR(2000)    NOT NULL, 
    CCOLOR            VARCHAR(60)      NOT NULL, 
    CIMPORTANCE       VARCHAR(60)      NOT NULL, 
    USER_COUPLENUM    NUMBER           NULL, 
    CONSTRAINT PK_Calendar PRIMARY KEY (CIDX)
)
/

CREATE SEQUENCE CALENDAR_SEQ
START WITH 1
INCREMENT BY 1;
/

COMMENT ON TABLE CALENDAR IS 'CALENDAR'
/

COMMENT ON COLUMN CALENDAR.CIDX IS 'Calendar Index 번호'
/

COMMENT ON COLUMN CALENDAR.CTITLE IS '이벤트 제목'
/

COMMENT ON COLUMN CALENDAR.CSTARTDAY IS '이벤트 시작일자'
/

COMMENT ON COLUMN CALENDAR.CENDDAY IS '이벤트 종료일자'
/

COMMENT ON COLUMN CALENDAR.CLOCAL IS '이벤트 장소'
/

COMMENT ON COLUMN CALENDAR.CCONTENT IS '이벤트 내용'
/

COMMENT ON COLUMN CALENDAR.CCOLOR IS '화면에 표시될 색상'
/

COMMENT ON COLUMN CALENDAR.CIMPORTANCE IS '이벤트 중요도'
/

COMMENT ON COLUMN CALENDAR.USER_COUPLENUM IS '연인 고유번호'
/

ALTER TABLE CALENDAR
    ADD CONSTRAINT FK_CALENDAR_USER_COUPLENUM_COU FOREIGN KEY (USER_COUPLENUM)
        REFERENCES COUPLE (COUPLE_NUM)
/
