-- Member Table 생성
CREATE TABLE MEMBER(
    USER_NUM NUMBER PRIMARY KEY,										-- INDEX
    USER_ID VARCHAR2(70) CONSTRAINT MEMBER_ID_NN NOT NULL,				-- 아이디
    USER_PWD VARCHAR2(20) CONSTRAINT MEMBER_PWD_NN NOT NULL,			-- 비밀번호
    USER_NICKNAME VARCHAR2(50),											-- 상대방 닉네임 (연인이 아닐시 아무것도 아니지만 연인 성립시 매칭해서 입력기능)
    USER_NAME VARCHAR2(50) CONSTRAINT MEMBER_NAME_NN NOT NULL,			-- 이름
    USER_PHONE VARCHAR2(15) CONSTRAINT MEMBER_PHONE_NN NOT NULL,		-- 연락처
    USER_BIRTH VARCHAR2(15) CONSTRAINT MEMBER_BIRTH_NN NOT NULL,		-- 주민번호
    USER_CUPLENUM NUMBER CONSTRAINT MEMBER_CUPLENUM_NN NOT NULL,		-- 연인 고유번호
    USER_MACH NUMBER(5) DEFAULT 0 CONSTRAINT MEMBER_MACH_NN NOT NULL,	-- 연인 매칭유무 승인이전 0 승인 이후 1
    USER_DDAY DATE,													-- 연인이 된 날짜	
    USER_ADATE DATE DEFAULT SYSDATE,									-- 가입일
    CONSTRAINT MEMBER_USER_ID_UQ UNIQUE(USER_ID),						-- 아이디는 고유값으로 설정
    CONSTRAINT MEMBER_USER_PHONE_UQ UNIQUE(USER_PHONE),					-- 연락처는 고유한 값으로 설정
    CONSTRAINT MEMBER_USER_CUPLENUM_UQ UNIQUE(USER_CUPLENUM)			-- 연인 고유번호는 고유한 값으로 설정
);

-- Member Table의 USER_NUM용 Sequence 생성
CREATE SEQUENCE MEMBER_SEQ
INCREMENT BY 1
START WITH 1;