-- BookStart(통장 입출금 내역용) Table 생성
CREATE TABLE BOOKSTART(
    BOOKSTART_BOOKNUM NUMBER CONSTRAINT BOOKSTART_BOOKNUM_NN NOT NULL,							-- 통장 INDEX
    BOOKSTART_NUM NUMBER CONSTRAINT BOOKSTART_NUM_PK PRIMARY KEY,								-- 입 / 출 INDEX           
    BOOKSTART_INPUT NUMBER(15),																	-- 입금
    BOOKSTART_OUTPUT NUMBER(15),																-- 출금
    BOOKSTART_USERNUM NUMBER CONSTRAINT BOOKSTART_USERNUM_NN NOT NULL,							-- 유저 INDEX
    BOOKSTART_DATE DATE DEFAULT SYSDATE,														-- 사용일
    CONSTRAINT BOOKSTART_USERNUM_FK FOREIGN KEY(BOOKSTART_USERNUM) REFERENCES MEMBER(USER_NUM)	-- 유저 INDEX는 MEMBER테이블의 USER_NUM을 참조하여 입력
);

-- BookStart(통장 입출금 내역용) Table의 BOOKSTART_BOOKNUM용 SEQUENCE 생성
CREATE SEQUENCE BOOKSTART_SEQ
INCREMENT BY 1
START WITH 1;