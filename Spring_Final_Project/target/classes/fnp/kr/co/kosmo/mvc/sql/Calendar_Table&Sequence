-- Calendar Table 생성
CREATE TABLE CALENDAR (
    CIDX NUMBER CONSTRAINT CALENDAR_CIDX_PK PRIMARY KEY,		-- Calendar Index 번호
    USER_CUPLENUM NUMBER DEFAULT 0,								-- 연인 고유번호
    CTITLE VARCHAR(200),										-- 약속 제목
    CSTARTDAY DATE CONSTRAINT CALENDAR_CSTARTDAY_NN NOT NULL,	-- 약속 시작일자
    CENDDAY DATE CONSTRAINT CALENDAR_CENDDAY_NN NOT NULL,		-- 약속 종료일자
    CLOCAL VARCHAR(100),										-- 약속 장소
    CCONTENT VARCHAR(2000),										-- 약속 내용
    CCOLOR VARCHAR(60),											-- 중요도에 따른 색상
    CONSTRAINT CALENDAR_USER_CUPLENUM_FK FOREIGN KEY(USER_CUPLENUM) REFERENCES MEMBER(USER_CUPLENUM)	-- USER_CUPLENUM은 MEMBER테이블의 USER_CUPLENUM을 참조하여 입력
);

-- Calendar Table의 CIDX용 Sequence 생성
CREATE SEQUENCE CALENDAR_CIDX_SEQ
START WITH 1
INCREMENT BY 1;